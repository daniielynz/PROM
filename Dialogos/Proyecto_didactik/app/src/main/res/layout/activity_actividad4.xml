<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/masClaro"
    tools:context=".Actividad4">

    <!-- Imagen en la esquina superior izquierda -->
    <ImageView
        android:id="@+id/imagenVolver"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/volver"
        android:onClick="volver"/>

    <!-- Layout vertical debajo de la imagen -->

    <LinearLayout
        android:id="@+id/layoutContenedor"
        android:layout_width="match_parent"
        android:layout_height="430dp"
        android:layout_below="@+id/imagenVolver"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <TextView
            android:id="@+id/preg1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zer iruditzen zaizue antzarren probetan antzarra aldatu izana? Zergatik?"
            android:textAlignment="center"
            android:textSize="20dp"
            android:height="80dp"
            android:gravity="center"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/cuadro1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:textAlignment="center"
            android:layout_margin="10dp"
            android:textSize="20dp"
            android:height="80dp"
            android:gravity="center"
            android:background="@android:color/white"
            android:hint="Hemen idatzi eztabaidaren konklusioa"
            android:textColorHint="@color/masOscuro"/>

        <TextView
            android:id="@+id/preg2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sokamuturra proban zer iruditzen zaizue bigatxa erabiltzea? Nola aldatuko zenukete animaliaren presentzia ekiditeko?"
            android:textAlignment="center"
            android:textSize="20dp"
            android:height="100dp"
            android:gravity="center"
            android:textStyle="bold"/>

        <!-- EditText -->
        <EditText
            android:id="@+id/buscador"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:textAlignment="center"
            android:layout_margin="10dp"
            android:textSize="20dp"
            android:height="80dp"
            android:gravity="center"
            android:background="@android:color/white"
            android:hint="Hemen idatzi eztabaidaren konklusioa"
            android:textColorHint="@color/masOscuro"/>
    </LinearLayout>


    <!-- BotÃ³n inferior -->
    <Button
        android:id="@+id/btnCompletado"
        style="@style/AppTheme.Button"
        android:layout_width="258dp"
        android:layout_height="63dp"
        android:layout_below="@id/layoutContenedor"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:onClick="accionCompletado"
        android:text="BUKATU" />
</RelativeLayout>
