<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- Configuramos el radio -->
    <corners
        android:radius="20dp" />
    <!-- Configuracion del gradiente: angulo, colores, radio y tipo -->
    <gradient
        android:angle="45"
        android:endColor="@color/claro"
        android:gradientRadius="50"
        android:startColor="@color/claro"
        android:type="linear" />

    <!-- Configuramos los diferentes bordes -->
    <stroke
        android:width="4dp"
        android:color="@color/masOscuro" />

    <!-- Configuramos el padding -->
    <padding
        android:left="3dp"
        android:top="1dp"
        android:right="3dp"
        android:bottom="3dp" />
</shape>