<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:fitsSystemWindows="true">

    <!-- Contenedor principal que alinea la ventana modal en el centro -->
    <LinearLayout
        android:id="@+id/modalContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/bordes_redondos_modal"
        android:maxWidth="380dp"
        android:minWidth="380dp"
        android:orientation="vertical"
        android:padding="10dp">

        <!-- Título de la ventana modal -->
        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Título de la Ventana Modal"
            android:textColor="@color/masOscuro"
            android:textSize="35dp"
            android:textStyle="bold" />

        <!-- Contenido de la ventana modal -->
        <TextView
            android:id="@+id/contentTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="Este es un texto de ejemplo en la ventana modal."
            android:textColor="@color/masOscuro"
            android:textSize="25dp"
            android:textStyle="bold" />

        <!-- Botón de aceptar/cerrar la ventana modal -->
        <Button
            android:id="@+id/acceptButton"
            style="@style/AppTheme.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:text="@string/botonCerrar" />
    </LinearLayout>
</RelativeLayout>