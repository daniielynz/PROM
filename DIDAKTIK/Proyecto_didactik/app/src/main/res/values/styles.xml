<resources>
    <!-- Estilo para el cuerpo de la aplicación sin ActionBar -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/masOscuro</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Estilo para el botón -->
    <style name="AppTheme.Button" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bordes_redondos_hover</item>
        <item name="android:textColor">@drawable/text_color_selector</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Estilo para textos -->
    <style name="AppTheme.TextView" parent="Widget.AppCompat.TextView">
        <item name="android:background">@drawable/bordes_listaletras</item>
        <item name="android:textColor">@drawable/text_color_selector_listaletras</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!-- Estilo para el radiobutton -->
    <style name="AppTheme.RadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:buttonTint">@color/masOscuro</item>
        <item name="android:textColor">@color/masOscuro</item>
    </style>

    <!-- Estilo para dialgo de misiones-->
    <style name="DialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/dialog_background</item>
    </style>
</resources>